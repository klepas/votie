= form_for(@talk) do |f|
  = f.error_messages

  %p
    = f.label :presenter
    %p
      = f.radio_button :creator_is_presenter, 1
      = f.label :creator_is_presenter_1, "Myself"
      %br/

      = f.radio_button :creator_is_presenter, 0
      = f.label :creator_is_presenter_0, "Someone else"

      %p
        - @talk.build_presenter if @talk.presenter.nil?
        = f.fields_for :presenter do |pf|
          = pf.label :name
          = pf.text_field :name
          %br
          = pf.label :twitter_name
          = pf.text_field :twitter_name
        

  %p
    = f.label :title
    %br
    = f.text_field :title

  %p
    = f.label :description
    %br
    = f.text_area :description, :rows => 2, :cols => 80

  %p
    = f.label :link
    %br
    = f.text_field :link

  %p
    = f.submit 'submit'
    - unless @talk.new_record?
      or
      = link_to 'Delete', @talk, :method => :delete, :confirm => 'Are you sure?'
    or
    = link_to 'Cancel', talks_path
